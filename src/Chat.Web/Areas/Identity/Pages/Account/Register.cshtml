@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar novo usuário";
}

<div class="card" style="max-width: 400px;">
    <div class="card-header" style="padding: 0.75rem 1.25rem;">
        Registrar novo usuário
    </div>
    <div class="card-body" style="padding: 1em !important;">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row g-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Input.FullName" class="form-label"></label>
                <input asp-for="Input.FullName" class="form-control" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary w-100">Registrar</button>
            </div>
            <div class="col-12 mt-3">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Já tem uma conta?</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
