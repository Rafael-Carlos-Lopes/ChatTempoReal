@page
@model LoginModel
@{
    ViewData["Title"] = "Entrar";
}

<div class="card" style="max-width: 350px; border: 1px solid rgba(0,0,0,.125);">
    <div class="card-header" style="padding: 0.75rem 1.25rem;">
        Login
    </div>
    <div class="card-body">
        <form id="account" method="post" class="row g-2 mt-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Input.Password" class="form-label">Senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-12">
                <div class="form-check fs-14">
                    <input class="form-check-input" asp-for="Input.RememberMe">
                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                </div>
            </div>
            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary w-100" style="background-color: #1F2C34;border-color: #1F2C34;">
                    Entrar
                </button>
            </div>
            <div class="col-12 mt-3">
                @*<a class="d-inline-flex" asp-page="./ForgotPassword">Forgot your password?</a>*@
                <a class="d-inline-flex" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar novo usuário</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Login.js"></script>
}
